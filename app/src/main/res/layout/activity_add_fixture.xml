<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFixture"
    android:orientation="vertical"
    android:background="@drawable/bg3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team 1"
        android:textSize="40sp"
        android:gravity="center"
        android:fontFamily="monospace"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Team Name : "
            android:textSize="20sp"
            android:textColor="#000000"
            android:fontFamily="monospace"/>

        <EditText
            android:id="@+id/af_t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:fontFamily="monospace"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="100dp"
        android:id="@+id/af_icon1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/af_cam1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:background="#000000"
            android:fontFamily="monospace"
            android:text="Set logo using camera"
            android:textColor="#e2b935"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/af_gal1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:background="#000000"
            android:fontFamily="monospace"
            android:text="Set logo from gallery"
            android:textColor="#e2b935"
            android:textSize="14dp"
            android:textStyle="bold" />
    </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team 2"
            android:textSize="40sp"
            android:gravity="center"
            android:fontFamily="monospace"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Team Name : "
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="monospace"/>

            <EditText
                android:id="@+id/af_t2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:fontFamily="monospace"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="100dp"
            android:id="@+id/af_icon2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/af_cam2"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:background="#000000"
                android:fontFamily="monospace"
                android:text="Set logo using camera"
                android:textColor="#e2b935"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/af_gal2"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="12dp"
                android:background="#000000"
                android:fontFamily="monospace"
                android:text="Set logo from gallery"
                android:textColor="#e2b935"
                android:textSize="14dp"
                android:textStyle="bold" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Date : "
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="monospace"/>

            <EditText
                android:id="@+id/af_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:fontFamily="monospace"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Time (in GMT) : "
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="monospace"/>

            <EditText
                android:id="@+id/af_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:fontFamily="monospace"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Venue : "
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="monospace"/>

            <EditText
                android:id="@+id/af_venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:fontFamily="monospace"/>
        </LinearLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:text="Add fixture"
            android:textSize="20dp"
            android:id="@+id/af_add"
            android:textColor="#ffffff"
            android:background="#66CC00"/>
</LinearLayout>
</ScrollView>